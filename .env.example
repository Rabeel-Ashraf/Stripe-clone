# Database Configuration
# PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/stripe_clone_dev"

# NextAuth Configuration
# Base URL of your application (must be HTTPS in production)
NEXTAUTH_URL="http://localhost:3000"

# Generate with: openssl rand -base64 32
# This should be a long, random string
NEXTAUTH_SECRET="your-secret-key-here"

# Email Provider Configuration
# Options: "resend", "nodemailer", "console"
# "console" logs emails to console (development only)
EMAIL_PROVIDER="console"

# Resend Configuration (if using Resend)
RESEND_API_KEY="re_your_resend_api_key_here"

# Nodemailer Configuration (if using SMTP)
NODEMAILER_HOST="smtp.gmail.com"
NODEMAILER_PORT="587"
NODEMAILER_USER="your-email@gmail.com"
NODEMAILER_PASS="your-app-specific-password"

# Security Configuration
# Number of failed attempts before account lock
RATE_LIMIT_ATTEMPTS="5"

# Rate limit window in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS="900000"

# JWT expiration in days
JWT_EXPIRY_DAYS="30"

# Logging Configuration
# Options: "info", "warn", "error"
LOG_LEVEL="info"

# Optional: OpenTelemetry for distributed tracing
# OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4318/v1/traces"
